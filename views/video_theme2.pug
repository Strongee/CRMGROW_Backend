doctype html
head
  meta(charset='utf-8')
  title #{user.user_name}
  base(href='/')
  link(rel='shortcut icon', type='image/x-icon', href='./assets/icons/favicon.ico')
  meta(property='og:title', content=`${video.title}`)
  meta(property='og:description', content=`${video.description}`)
  meta(property='og:image:width', content='600')
  meta(property='og:image:height', content='300')
  meta(property='og:image', content=`${video.thumbnail}`)
  meta(name='viewport', content='width=device-width, initial-scale=1')
  link(rel='stylesheet', href='./theme/css/bootstrap.min.css')
  link(rel='stylesheet', href='./theme/css/theme2.css')
  script(src='./theme/js/jquery.min.js')
  script(src='./theme/js/popper.min.js')
  script(src='./theme/js/bootstrap.min.js')
  script(src='https://kit.fontawesome.com/a076d05399.js')
  script(type='text/javascript', src='/socket.io/socket.io.js')
  link(href='https://fonts.googleapis.com/css2?family=Manrope:wght@300;400;600;700;800&display=swap', rel='stylesheet')
  link(href='./theme/plugins/plyr/plyr.css', rel='stylesheet')
  link(rel='stylesheet', type='text/css', href='./theme/plugins/slick-carousel/slick/slick.css')
  link(rel='stylesheet', type='text/css', href='./theme/plugins/slick-carousel/slick/slick-theme.css')
header
  .profile.container.cs-container
    .avatar-social
      img.avatar(src=`${ user.picture_profile || 'theme/images/avatar.jpeg'}`)
      .name-socials
        .name #{user.user_name}
        .socials
          a(class=social_link['facebook']?'':'d-none' href=social_link['facebook'])
            i.fab.fa-facebook-square
          a(class=social_link['twitter']?'':'d-none' href=social_link['twitter'])
            i.fab.fa-twitter
          a(class=social_link['linkedin']?'':'d-none' href=social_link['linkedin'])
            i.fab.fa-linkedin-in
    .contact-info
      .phone-info
        img.icon(src='./theme/icons/phone.png')
        span #{user.cell_phone}
      .email-info
        img.icon(src='./theme/icons/envelope.png')
        span #{user.email}
.container
  .avatar-social.sm-profile
    img.avatar(src=`${ user.picture_profile || 'theme/images/avatar.jpeg'}`)
    .name-socials
      .name #{user.user_name}
      .socials
        a(class=social_link['facebook']?'':'d-none' href=social_link['facebook'])
          i.fab.fa-facebook-square
        a(class=social_link['twitter']?'':'d-none' href=social_link['twitter'])
          i.fab.fa-twitter
        a(class=social_link['linkedin']?'':'d-none' href=social_link['linkedin'])
          i.fab.fa-linkedin-in
section.material-section
  .container.cs-container
    .md-content
      h1.material-title.text-center.mb-1
        | #{video.title}
      p.material-description.text-center
        | #{video.description}
    .row.material-profile-wrapper
      .material-wrapper.mx-2
        .video-player-wrapper
          if video.type === 'youtube' || video.type === 'vimeo'
            div#player(data-plyr-provider=`${video.type}` data-plyr-embed-id=`${video.url}`)
          else 
            video#player(poster=`${video.thumbnail}`, autoplay, controls, name="media")
              source(src=`${video.url}`, type=`video/mp4`)
.highlights-section
  h3.text-center Company Hightlights
  .container.cs-container.hightlights-slider
    .highlights
      .highlight-item
        img(src='./theme/images/highlight (1).jpg')
      .highlight-item
        img(src='./theme/images/highlight (2).jpg')
      .highlight-item
        img(src='./theme/images/highlight (3).jpg')
      .highlight-item
        img(src='./theme/images/highlight (4).jpg')
      .highlight-item
        img(src='./theme/images/highlight (5).jpg')
      .highlight-item
        img(src='./theme/images/highlight (6).jpg')
      .highlight-item
        img(src='./theme/images/highlight (7).jpg')
      .highlight-item
        img(src='./theme/images/highlight (8).jpg')
      .highlight-item
        img(src='./theme/images/highlight (9).jpg')
.logos-section
  h3.text-center As Seen On:
  .logos.justify-content-center
    .logo-item
      img(src='./theme/images/forbes-gray.png')
    .logo-item
      img(src='./theme/images/nasdao.png')
    .logo-item
      img(src='./theme/images/yahoo-finance.png')
    .logo-item
      img(src='./theme/images/housingwire.png')
    .logo-item
      img(src='./theme/images/marketwatch.png')
input#video-duration(type='hidden', value=`${video.duration/1000}`)
input#activity(type='hidden', value=`${activity}`)
input#contact(type='hidden', value=`${contact}`)
input#user(type='hidden', value=`${user._id}`)
input#video(type='hidden', value=`${video._id}`)
script(src='theme/plugins/plyr/plyr.min.js')
script(src='theme/plugins/slick-carousel/slick/slick.min.js')
script(src='theme/js/custom.js')
script(type='text/javascript', src='./theme/core/track_video.js')